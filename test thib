import pygame
from pygame.locals import *
pygame.init()

fenetre = pygame.display.set_mode((1100, 720))
pygame.display.set_caption("Only Way Out")
background = pygame.image.load('image-jeux.png').convert()
jeep = pygame.image.load('jeep.png').convert()

fenetre.blit(background, (0, 0))
fenetre.blit(jeep, (1055, 45))
pygame.display.flip()
jeep_position = [1055, 45]

temps = pygame.time.get_ticks()
if temps == 5000:
    pygame.quit()
else:
    for event in pygame.event.get():
        if event.type == KEYDOWN:
            if event.key == K_ESCAPE:
                pygame.quit()
        if event.type == KEYDOWN:
            if event.key == K_UP:
                    jeep_position[1] += 20
                    fenetre.blit(jeep, (jeep_position[0], jeep_position[1]))
       


